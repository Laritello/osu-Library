<Window x:Class="osu_Library.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:osu_Library"
        mc:Ignorable="d"
        Title="Splash" Height="350" Width="300"
        WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown" Margin="0 0 0 0" Background="#212a3f">
        <Image x:Name="Logo" Style="{DynamicResource SplashLogo}" Source="images/logos/splash_osu_logo.png" HorizontalAlignment="Stretch" VerticalAlignment="Top">
        </Image>
        <Label x:Name="ProgressStatus" Content="Starting up!" VerticalAlignment="Bottom" HorizontalAlignment="Center"
               Margin="0 0 0 50" Foreground="White" FontFamily="Segoe UI Semibold" FontSize="18"></Label>
    </Grid>
</Window>
