<UserControl x:Class="osu_Library.UserControls.TitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:osu_Library.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="400">
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="Black" Opacity="0.5"/>
        </Grid.Background>
        <Label Content="osu!Library" Style="{DynamicResource LabelStyleAppTitle}" Foreground="White" MouseDown="Label_MouseDown" MouseDoubleClick="Label_MouseDoubleClick"/>
        <Button x:Name="ButtonClose" Style="{DynamicResource ButtonStyleClose}" Click="ButtonClose_Click"/>
        <Button x:Name="ButtonMinimize" Style="{DynamicResource ButtonStyleMinimize}" Click="ButtonMinimize_Click"/>
        <Button x:Name="ButtonGitHub" Style="{DynamicResource ButtonStyleGitHub}" Click="ButtonGitHub_Click"/>
    </Grid>
</UserControl>
